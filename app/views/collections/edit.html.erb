<h1>Fill out the form below to share your collection</h1>
<div>
  <form action="/collections/<%=@collection.id%>" method="post">
  <input id='hidden' type='hidden' name='_method' value='patch'>
    <label for="name">Collection Name: </label>
    <input type="text" name="collection[name]" id="name" value="<%=@collection.name%>">

    <label for="description">Description: </label>
    <input type="text" name="collection[description]" id="description" value="<%=@collection.description%>">
</div>
<div>
  <p>Current Items: </p>
      <h6>(To revmove an item from the collection, uncheck the box)</h6>
      <%@collection.items.each do |item|%>
        <input type="checkbox" name="collection[item_ids][]" id="<%= item.id %>" value="<%= item.id %>" <%='checked' if @collection.items.include?(item) %>><%= item.name %></input>
      <br>
      <% end %>
    <br>
</div>
<ul>
    <label for="items">Add an Item: </label>
  <li>
    <label for="item_name">Item Name: </label>
    <input type="text" name="collection[items][name]" id="item_name">

    <label for="item_condition">Item Condition: </label>
    <input type="text" name="collection[items][condition]" id="item_condition">

    <label for="item_img_url">Image Url</label>
    <input type="text" name="collection[items][img_url]" id="item_img_url">
  </li>
</ul>
    <input type="submit" name="submit" value="Update!">
  </form>
  <form action="/collections/<%=@collection.id%>/delete" method="post">
    <input id='hidden' type='hidden' name='_method' value='delete'>
      <input type="submit" value="Delete This Collection">
  </form>
</div>
