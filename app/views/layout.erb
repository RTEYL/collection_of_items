  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>CollectionOfItems</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
  </head>
  <body>
  <div class="nav">
  <%if session[:user_id]%>
    <form action="/users" method="get">
      <input type="submit" name="home" value="Home">
    </form>
    <form action="/users/logout" method="post">
      <input type="submit" name="logout" value="Log Out">
    </form>
    <form action="/collections" method="get">
      <input type="submit" value="All Collections">
    </form>
  <%else%>
    <form action="/" method="get">
      <input type="submit" name="home" value="Home">
    </form>
    <form action="/users/login" method="get">
      <input type="submit" name="login" value="Login!">
    </form>
    <form action="/users/signup" method="get">
      <input type="submit" name="signup" value="Sign Up!">
    </form>
  <%end%>
  </div>
    <div class="wrapper">

      <% if flash[:message] %>
        <div class="flash_message" style="color:red;">
          <% flash.each do |m,err| %>
            <%= "#{err}"%>
            <%end%>
        </div>
      <% end %>

      <%= yield %>

      <footer class="branding">
        <small>&copy; 2020 <strong>CollectionOfItems</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
